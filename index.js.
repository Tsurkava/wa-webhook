const express = require("express");
const app = express();
const PORT = process.env.PORT || 3000;

// Проверка токена (GET /webhook)
app.get("/webhook", (req, res) => {
  const VERIFY_TOKEN = "tsurkava123"; // твой маркер
  const mode = req.query["hub.mode"];
  const token = req.query["hub.verify_token"];
  const challenge = req.query["hub.challenge"];

  if (mode && token) {
    if (mode === "subscribe" && token === VERIFY_TOKEN) {
      console.log("WEBHOOK_VERIFIED");
      res.status(200).send(challenge);
    } else {
      res.sendStatus(403);
    }
  }
});

// Добавляем JSON-парсер
app.use(express.json());

// Обработка входящих сообщений (POST /webhook)
app.post("/webhook", (req, res) => {
  console.log("INCOMING MESSAGE:", JSON.stringify(req.body, null, 2));
  res.sendStatus(200); // всегда отвечаем 200, чтобы Meta не повторяла запрос
});

app.listen(PORT, () => console.log(`Server is running on port ${PORT}`));
