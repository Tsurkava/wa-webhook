const express = require("express");
const bodyParser = require("body-parser");

const app = express();
const PORT = process.env.PORT || 3000;

// Middleware Ğ´Ğ»Ñ Ğ¾Ğ±Ñ€Ğ°Ğ±Ğ¾Ñ‚ĞºĞ¸ JSON-Ñ‚ĞµĞ»
app.use(bodyParser.json());

// Ğ’ĞµÑ€Ğ¸Ñ„Ğ¸ĞºĞ°Ñ†Ğ¸Ñ Webhook (GET)
app.get("/webhook", (req, res) => {
  const VERIFY_TOKEN = "tsurkava123"; // Ğ¢Ğ’ĞĞ™ Ğ¼Ğ°Ñ€ĞºĞµÑ€ Ğ¿Ğ¾Ğ´Ñ‚Ğ²ĞµÑ€Ğ¶Ğ´ĞµĞ½Ğ¸Ñ
  const mode = req.query["hub.mode"];
  const token = req.query["hub.verify_token"];
  const challenge = req.query["hub.challenge"];

  if (mode && token) {
    if (mode === "subscribe" && token === VERIFY_TOKEN) {
      console.log("âœ… WEBHOOK_VERIFIED");
      res.status(200).send(challenge);
    } else {
      res.sendStatus(403);
    }
  }
});

// ĞŸÑ€Ğ¸Ñ‘Ğ¼ ÑĞ¾Ğ±Ñ‹Ñ‚Ğ¸Ğ¹ (POST)
app.post("/webhook", (req, res) => {
  console.log("ğŸ“© Incoming webhook event:");
  console.log(JSON.stringify(req.body, null, 2));

  // ĞµÑĞ»Ğ¸ Ğ¿Ñ€Ğ¸ÑˆĞ»Ğ¾ ÑĞ¾Ğ¾Ğ±Ñ‰ĞµĞ½Ğ¸Ğµ Ğ¾Ñ‚ WhatsApp
  if (
    req.body.object &&
    req.body.entry &&
    req.body.entry[0].changes &&
    req.body.entry[0].changes[0].value.messages
  ) {
    const message = req.body.entry[0].changes[0].value.messages[0];
    console.log("ğŸ’¬ ĞĞ¾Ğ²Ğ¾Ğµ ÑĞ¾Ğ¾Ğ±Ñ‰ĞµĞ½Ğ¸Ğµ:", message.text ? message.text.body : message);
  }

  // Ğ²ÑĞµĞ³Ğ´Ğ° Ğ¾Ñ‚Ğ²ĞµÑ‡Ğ°ĞµĞ¼ 200, Ñ‡Ñ‚Ğ¾Ğ±Ñ‹ Meta Ğ·Ğ½Ğ°Ğ»Ğ°, Ñ‡Ñ‚Ğ¾ Ğ²ÑÑ‘ Ğ¾Ğº
  res.sendStatus(200);
});

// Ğ—Ğ°Ğ¿ÑƒÑĞº ÑĞµÑ€Ğ²ĞµÑ€Ğ°
app.listen(PORT, () => console.log(`ğŸš€ Server is running on port ${PORT}`));
