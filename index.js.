const express = require("express");
const bodyParser = require("body-parser");

const app = express();
const PORT = process.env.PORT || 3000;

// Чтобы парсить JSON в POST-запросах
app.use(bodyParser.json());

// Твой VERIFY_TOKEN из Meta (тот, что указывал в настройках)
const VERIFY_TOKEN = "tsurkava123";

// ----- Верификация Webhook от Meta -----
app.get("/webhook", (req, res) => {
  const mode = req.query["hub.mode"];
  const token = req.query["hub.verify_token"];
  const challenge = req.query["hub.challenge"];

  if (mode && token) {
    if (mode === "subscribe" && token === VERIFY_TOKEN) {
      console.log("WEBHOOK_VERIFIED");
      res.status(200).send(challenge); // Возвращаем challenge обратно
    } else {
      res.sendStatus(403);
    }
  } else {
    res.sendStatus(400);
  }
});

// ----- Обработка входящих сообщений -----
app.post("/webhook", (req, res) => {
  console.log("POST /webhook", JSON.stringify(req.body, null, 2));

  // Обязательно отвечаем 200, чтобы Meta считала запрос успешным
  res.sendStatus(200);
});

// Запуск сервера
app.listen(PORT, () => {
  console.log(`Server is running on port ${PORT}`);
});
