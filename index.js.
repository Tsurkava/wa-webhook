const express = require("express");
const app = express();
const PORT = process.env.PORT || 3000;

app.use(express.json());

// Верификация webhook (GET)
app.get("/webhook", (req, res) => {
  const VERIFY_TOKEN = "tsurkava123"; // твой маркер
  const mode = req.query["hub.mode"];
  const token = req.query["hub.verify_token"];
  const challenge = req.query["hub.challenge"];

  if (mode && token && mode === "subscribe" && token === VERIFY_TOKEN) {
    console.log("WEBHOOK_VERIFIED");
    res.status(200).send(challenge);
  } else {
    res.sendStatus(403);
  }
});

// Приём сообщений (POST)
app.post("/webhook", (req, res) => {
  console.log("Получен POST от Meta:", JSON.stringify(req.body, null, 2));
  
  // всегда отвечаем 200, иначе Meta будет повторять запрос
  res.sendStatus(200);
});

app.listen(PORT, () => console.log(`Server is running on port ${PORT}`));
